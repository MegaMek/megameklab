{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Aerospace Fighter Schema",
  "description": "Schema for Aerospace Fighter units.",
  "type": "object",
  "allOf": [
    { "$ref": "commonUnitSchema.json" }
  ],
  "properties": {
    "config": {
      "type": ["string", "null"],
      "enum": [null, "Aerodyne"],
      "description": "Configuration, typically Aerodyne for fighters."
    },
    "engine": {
      "type": ["object", "null"],
      "properties": {
        "type": { "type": ["string", "null"], "enum": [null, "Fusion", "XL Fusion", "Light Fusion", "Compact Fusion"] },
        "rating": { "type": ["integer", "null"] },
        "manufacturer": { "type": ["string", "null"] }
      }
    },
    "movement": {
      "type": ["object", "null"],
      "description": "Aerospace movement capabilities.",
      "properties": {
        "safe_thrust_mp": { "type": ["integer", "null"] },
        "max_thrust_mp": { "type": ["integer", "null"] },
        "fuel_points": { "type": ["integer", "null"] },
        "structural_integrity": { "type": ["integer", "null"] }
      }
    },
    "heat_sinks": {
      "type": ["object", "null"],
      "properties": {
        "type": { "type": ["string", "null"], "enum": [null, "Single", "Double"] },
        "count": { "type": ["integer", "null"] }
      }
    },
    "armor": {
      "type": ["object", "null"],
      "properties": {
        "type": { "type": ["string", "null"] },
        "manufacturer": { "type": ["string", "null"] },
        "locations": {
          "type": ["array", "null"],
          "description": "Armor points per aerospace location.",
          "items": {
            "type": "object",
            "properties": {
              "location": {
                "type": ["string", "null"],
                "enum": [null, "Nose", "Left Wing", "Right Wing", "Aft"]
              },
              "armor_points": { "type": ["integer", "null"] }
            }
          }
        }
      }
    },
    "weapons_and_equipment": {
      "type": ["array", "null"],
      "description": "List of weapons and equipment, mounted in aerospace locations.",
      "items": {
        "type": "object",
        "properties": {
          "item_name": { "type": ["string", "null"] },
          "item_type": { "type": ["string", "null"], "enum": [null, "weapon", "ammo", "equipment", "bomb"] },
          "location": {
            "type": ["string", "null"],
            "enum": [null, "Nose", "Left Wing", "Right Wing", "Aft", "Body", "Fuselage"]
          },
          "rear_facing": { "type": ["boolean", "null"], "default": false }
        }
      }
    },
    "cockpit": { "type": ["string", "null"] },
    "avionics": { "type": ["string", "null"] },
    "landing_gear": { "type": ["string", "null"] },
    "criticals": { "not": {"type": "object"} },
    "myomer": { "not": {"type": "object"} }
  }
}
