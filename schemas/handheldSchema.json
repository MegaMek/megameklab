{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Handheld Object Schema",
  "description": "Schema for handheld objects like weapons or tools, not full combat units.",
  "type": "object",
  "properties": {
    "name": { "type": ["string", "null"] },
    "model": { "type": ["string", "null"] },
    "year_introduced": { "type": ["integer", "string", "null"] },
    "tech_base": { "type": ["string", "null"], "enum": [null, "Inner Sphere", "Clan", "Mixed", "Generic", "Unknown"] },
    "rules_level": { "type": ["integer", "string", "null"] },
    "source": { "type": ["string", "null"] },
    "item_type": {
      "type": ["string", "null"],
      "enum": [null, "handheld_weapon", "handheld_tool", "handheld_equipment", "battle_armor_weapon_portable", "infantry_support_weapon"]
    },
    "weapon_properties": {
      "type": ["object", "null"],
      "properties": {
        "type": { "type": ["string", "null"] },
        "damage": { "type": ["string", "number", "null"] },
        "range_short_m": { "type": ["integer", "null"] },
        "range_medium_m": { "type": ["integer", "null"] },
        "range_long_m": { "type": ["integer", "null"] },
        "heat": { "type": ["integer", "null"] },
        "magazine_size": { "type": ["integer", "null"] },
        "ammo_type": { "type": ["string", "null"] }
      }
    },
    "tool_properties": {
      "type": ["object", "null"],
      "properties": {
        "function": { "type": ["string", "null"] },
        "operational_duration_hours": { "type": ["number", "null"] }
      }
    },
    "equipment_properties": {
        "type": ["object", "null"],
        "properties": {
            "effect": {"type": ["string", "null"]}
        }
    },
    "mass_kg": { "type": ["number", "null"] },
    "cost_cbills": { "type": ["number", "null"] },
    "legality": { "type": ["string", "null"] },
    "manufacturer": { "type": ["string", "null"] }
  }
}
